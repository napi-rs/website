{
  "name": "napi-rs-docs",
  "private": true,
  "version": "1.0.0",
  "description": "Website for https://napi.rs",
  "author": "lynweklm@gmail.com",
  "license": "MIT",
  "type": "module",
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "dependencies": {
    "@mdx-js/react": "^3.1.0",
    "@vercel/analytics": "^1.5.0",
    "lodash-es": "^4.17.21",
    "next": "15.3.5",
    "nextra": "2.13.4",
    "nextra-theme-docs": "2.13.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@perfsee/webpack": "^1.14.2",
    "@types/node": "^22.16.0",
    "@types/react": "^18.3.23",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "file-loader": "^6.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "sharp": "^0.34.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "vercel": "^44.2.8"
  },
  "scripts": {
    "dev": "next",
    "start": "next start",
    "build": "next build",
    "build:en": "next build",
    "build:cn": "cross-env LOCALE=cn next build",
    "build:pt-BR": "cross-env LOCALE=pt-BR next build",
    "format": "prettier -w .",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.@(js|jsx|yml|yaml|json|md)": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.9.2"
}
