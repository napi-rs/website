{
  "name": "napi-rs-docs",
  "private": true,
  "version": "1.0.0",
  "description": "Website for https://napi.rs",
  "author": "lynweklm@gmail.com",
  "license": "MIT",
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "prismjs": "^1.25.0",
    "prop-types": "^15.8.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@docusaurus/core": "2.0.0-beta.14",
    "@docusaurus/plugin-ideal-image": "^2.0.0-beta.14",
    "@docusaurus/preset-classic": "2.0.0-beta.14",
    "@emotion/css": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mdx-js/react": "^1.6.22",
    "husky": "7",
    "lint-staged": "^12.1.3",
    "mdx-utils": "^0.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "prism-react-renderer": "^1.2.1",
    "vercel": "^23.1.2"
  },
  "scripts": {
    "start": "cp src/index-en.mdx src/pages/index.mdx && docusaurus start",
    "build": "cp src/index-en.mdx src/pages/index.mdx && docusaurus build --out-dir public",
    "build:cn": "cp src/index-cn.mdx src/pages/index.mdx && docusaurus build --out-dir public --locale cn",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "format": "prettier -w .",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.@(js|jsx|yml|yaml|json|md|mdx)": [
      "prettier --write"
    ]
  }
}
