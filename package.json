    "next": "14.2.16",
    "nextra": "2.13.4",
    "nextra-theme-docs": "2.13.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@perfsee/webpack": "^1.10.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.2.45",
    "@types/sharp": "^0.32.0",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "file-loader": "^6.2.0",
    "husky": "9",
    "lint-staged": "^15.2.0",
    "next-mdx-remote": "^5.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "sharp": "^0.33.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vercel": "^37.0.0"
  },
  "scripts": {
    "dev": "next",
    "start": "next start",
    "build": "next build",
    "build:en": "next build",
    "build:cn": "cross-env LOCALE=cn next build",
    "build:pt-BR": "cross-env LOCALE=pt-BR next build",
