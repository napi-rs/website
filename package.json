    "nextra-theme-docs": "^2.0.0-alpha.18",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "husky": "7",
    "lint-staged": "^12.1.3",
    "prettier": "^2.5.1"
  },
  "scripts": {
    "dev": "next",
    "start": "next start",
    "build": "next build",
    "format": "prettier -w .",
