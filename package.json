{
  "name": "napi-rs-docs",
  "private": true,
  "version": "1.0.0",
  "description": "Website for https://napi.rs",
  "author": "lynweklm@gmail.com",
  "license": "MIT",
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "dependencies": {
    "next": "^12.0.9",
    "nextra": "2.0.0-alpha.23",
    "nextra-theme-docs": "2.0.0-alpha.23",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/node": "^17.0.12",
    "@types/react": "^17.0.38",
    "cross-env": "^7.0.3",
    "husky": "7",
    "lint-staged": "^12.3.2",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "dev": "next",
    "start": "next start",
    "build": "next build",
    "build:cn": "cross-env LOCALE=cn next build",
    "format": "prettier -w .",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.@(js|jsx|yml|yaml|json|md|mdx)": [
      "prettier --write"
    ]
  }
}
